{
  "name": "ScheduleBlock",
  "description": "Block websites on a schedule",
  "version": "1.1.6",
  "manifest_version": 2,
  "permissions": ["storage"],

  "web_accessible_resources": [
	"src/Misc.js",
	"src/Record.js",
	"src/RecordStorage.js",
	"src/options.js",
	"src/content.js"
  ],
  "background": {
	"scripts": ["src/background_loader.js"],
	"persistent": false
  },
  "content_scripts" : [{
        "matches" : [ "<all_urls>"],
        "js" : ["src/content.js"],
	"run_at": "document_start"
    }],

  "icons": {
	"48": "images/ScheduleBlock128.png",
	"96": "images/ScheduleBlock128.png",
    "128": "images/ScheduleBlock128.png"
  },
  "options_ui": {
	"page": "src/options.html",
	"browser_style": false,
	"open_in_tab": true
  },
  
  "browser_specific_settings": {
    "gecko": {
	  "id": "toxicgamerd777@gmail.com"
	}
  }
}
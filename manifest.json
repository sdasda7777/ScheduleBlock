{
  "name": "ScheduleBlock",
  "description": "Block websites on a schedule",
  "version": "1.1.4",
  "manifest_version": 3,
  "permissions": ["storage", "scripting"],

  "web_accessible_resources": [{
	"matches": ["<all_urls>"],
	"resources": [
		"Misc.js",
		"Record.js",
		"RecordStorage.js",
		"options.js",
		"content.js"
	]
  }],
  "background": {
	"service_worker": "background_loader_mod.js",
	"type": "module"
  },
  "content_scripts" : [{
        "matches" : [ "<all_urls>"],
        "js" : ["content.js"],
	"run_at": "document_start"
  }],

  "icons": {
    "128": "/images/ScheduleBlock128.png"
  },
  "options_page": "options.html"
}